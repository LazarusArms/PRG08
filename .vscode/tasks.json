{
    "version": "0.1.0",
    "command": "Chrome",
    "osx": {
        "command": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
    },
    "args": ["${file}"],
    "isShellCommand": true,
    "args": ["-w", "-p", "."],
    "showOutput": "always",
    "isBackground": true,
    "problemMatcher": "$tsc-watch"
}

